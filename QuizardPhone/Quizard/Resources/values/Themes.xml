<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="CustomActionToolbarTheme"
         parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/HomeActionBar</item>
  </style>

  <style name="HomeActionBar"
         parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:height">80dp</item>
    <item name="android:displayOptions"></item>
    <item name="android:background">#02243C</item>
  </style>

  <style name="ListViewStyle.Light" parent="android:style/Widget.ListView">
    <item name="android:background">#02243c</item>
    <item name="android:divider">#71C42B</item>
    <item name="android:dividerHeight">3dp</item>
    <item name="android:listSelector">#71C42B</item>
    <item name="android:textColor">#000000</item>
  </style>
</resources>