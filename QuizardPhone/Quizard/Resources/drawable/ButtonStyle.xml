<?xml version="1.0" encoding="utf-8" ?>
<!--#FFFFFF = White
    #71C42B = Green
    #F2F39E = Light Green-->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!--When the button HAS NOT been pressed by the user...-->
  <item android:state_pressed="false">
    <layer-list>
      <item android:top="5dp"
            android:right="5dp">
        <shape>
          <corners android:radius="2dp"/>
          <solid android:color="#FFFFFF"/>
        </shape>
      </item>
      <item android:bottom="2dp"
            android:left="2dp">
        <shape>
          <corners android:radius="4dp"/>
          <gradient android:angle="270"
                    android:startColor="#71C42B"
                    android:endColor="#71C42B"/>
          <stroke android:width="1dp"
                  android:color="#71C42B"/>
          <padding android:top="10dp"
                   android:bottom="10dp"
                   android:left="10dp"
                   android:right="10dp"/>
        </shape>
      </item>
    </layer-list>
  </item>

  <!--When the button HAS been pressed by the user...-->
  <item android:state_pressed="true">
    <layer-list>
      <item android:top="5dp"
            android:right="5dp">
        <shape>
          <corners android:radius="2dp"/>
          <solid android:color="#FFFFFF"/>
        </shape>
      </item>
      <item android:bottom="2dp"
            android:left="2dp">
        <shape>
          <corners android:radius="4dp"/>
          <gradient android:angle="270"
                    android:startColor="#71C42B"
                    android:endColor="#F2F39E"/>
          <stroke android:width="1dp"
                  android:color="#71C42B"/>
          <padding android:top="10dp"
                   android:bottom="10dp"
                   android:left="10dp"
                   android:right="10dp"/>
        </shape>
      </item>
    </layer-list>
  </item>
</selector>